<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher.TeacherLogin"
    android:background="@drawable/background"
    android:orientation="vertical">

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:onClick="BacktoMain"
        android:src="@drawable/ic_left_arrow"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/teacherID"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/custom_icon_user"
        android:hint="Teacher ID"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:inputType="text"
        android:drawablePadding="10dp"
        android:padding="10dp" />

    <EditText
        android:id="@+id/teacherPassword"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/custom_icon_key"
        android:drawableRight="@drawable/custom_icon_toggle_eye"
        android:hint="Password"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/gradient_button"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:onClick="TeacherLoginFunction">

        <TextView
            android:layout_marginLeft="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/right_arrow"/>
    </LinearLayout>
    <!--    <Button-->
    <!--        android:id="@+id/btn_login"-->
    <!--        android:layout_width="250dp"-->
    <!--        android:layout_height="45dp"-->
    <!--        android:layout_marginTop="25dp"-->
    <!--        android:layout_gravity="center"-->
    <!--        android:background="@drawable/gradient_button"-->
    <!--        android:drawableEnd="@drawable/right_arrow"-->
    <!--        android:drawablePadding="-50dp"-->
    <!--        android:text="Login"-->
    <!--        android:textColor="#ffff"-->
    <!--        android:textSize="20sp"/>-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New User?"
            android:textColor="@color/white"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign up now"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="16sp"
            android:onClick="TeacherReg"/>

    </LinearLayout>

</LinearLayout>