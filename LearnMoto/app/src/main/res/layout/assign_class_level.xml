<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Please input what level you are assign \nKinder\nNursery\nPreparatory"/>

    <EditText
        android:id="@+id/inputAssignLevel"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter year level"
        android:inputType="textCapWords"
        android:drawableStart="@drawable/custom_icon_level"
        android:background="@drawable/custom_input"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/AddLevelList"
            android:layout_width="150dp"
            android:layout_marginHorizontal="5sp"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:text="ADD"/>

        <Button
            android:id="@+id/Save"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5sp"
            android:background="@color/light_green"
            android:text="SAVE"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listlevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>