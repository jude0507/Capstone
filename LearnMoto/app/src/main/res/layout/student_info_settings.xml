<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Student.StudentInfoSettings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="backtosettings"
                android:src="@drawable/ic_arrowback"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setting_text"
                android:fontFamily="@font/aloevera"
                android:textSize="22dp"
                android:textColor="@color/fontColor"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>

        <TextView
            android:id="@+id/editData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textAlignment="center"
            android:onClick="EditData"
            android:layout_gravity="right"
            android:layout_marginHorizontal="25dp"
            android:drawableTop="@drawable/ic_pencil"
            tools:ignore="RtlCompat" />

<!--        <ImageView-->
<!--            android:id="@+id/editData"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/ic_pencil"-->
<!--            android:layout_gravity="right"-->
<!--            android:onClick="EditData"-->
<!--            android:layout_marginHorizontal="25dp"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginVertical="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_user_circle"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />

<!--            <androidx.cardview.widget.CardView-->
<!--                android:layout_width="100dp"-->
<!--                android:layout_height="100dp"-->
<!--                app:cardCornerRadius="50dp"-->
<!--                android:layout_gravity="center">-->
<!--                -->
<!--            </androidx.cardview.widget.CardView>-->

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Information"
            android:fontFamily="@font/aloevera"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/stName"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_edittext"
            android:drawableLeft="@drawable/ic_user_round"
            android:drawablePadding="10dp"
            android:hint="Student Name"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/stAddress"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_edittext"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="10dp"
            android:hint="Address"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/stGender"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_edittext"
            android:drawableLeft="@drawable/ic_gen"
            android:drawablePadding="10dp"
            android:hint="Gender"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/stBirthday"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_edittext"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawablePadding="10dp"
            android:hint="Birthday"
            android:inputType="date"
            android:padding="10dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/stLevel"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_edittext"
            android:drawableLeft="@drawable/ic_level"
            android:drawablePadding="10dp"
            android:hint="Year Level"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/stGuardian"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_edittext"
            android:drawableLeft="@drawable/ic_user_round"
            android:drawablePadding="10dp"
            android:hint="Guardian"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/stID"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_edittext"
            android:drawableLeft="@drawable/ic_id"
            android:drawablePadding="10dp"
            android:hint="Student ID"
            android:maxLength="11"
            android:inputType="number"
            android:padding="10dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/stPass"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_edittext"
            android:drawableLeft="@drawable/ic_keypass"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="18dp" />
        <LinearLayout
            android:id="@+id/choosefile"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_edittext"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"
                android:text="Choose Image"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_file"/>
        </LinearLayout>

        <Button
            android:id="@+id/updatebtn"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:text="Update"
            android:textColor="@color/white"
            android:background="@drawable/custom_login_button"
            android:layout_gravity="center"
            android:onClick="UpdateStudentInfo"/>

    </LinearLayout>
</ScrollView>