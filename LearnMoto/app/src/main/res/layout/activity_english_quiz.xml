<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lighter_green"
    android:padding="15dp"
    tools:context=".EnglishQuiz">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp">

        <ImageView
            android:layout_marginVertical="10sp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="BackToQuiz"
            android:src="@drawable/ic_arrowback" />

        <TextView
            android:id="@+id/txtSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="English Quiz"
            android:textColor="@color/black"
            android:fontFamily="@font/fingerpaint"
            android:textAlignment="center"
            android:textSize="18sp" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Say the Word"
        android:textAlignment="center"
        android:layout_marginVertical="15dp"
        android:layout_gravity="center_horizontal"/>


    <TextView
        android:id="@+id/txtRandom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginVertical="15dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/speak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speak"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginHorizontal="15dp"
            app:drawableTopCompat="@drawable/ic_mic1" />

        <TextView
            android:id="@+id/shuffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shuffle"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginHorizontal="15dp"
            app:drawableTopCompat="@drawable/ic_shuffle" />

        <TextView
            android:id="@+id/txtInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text Input"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginHorizontal="15dp"
            app:drawableTopCompat="@drawable/ic_txt_input" />

    </LinearLayout>

    <Button
        android:id="@+id/Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:text="Submit"
        android:background="@color/teal_200"
        android:layout_marginVertical="25dp"/>

</LinearLayout>