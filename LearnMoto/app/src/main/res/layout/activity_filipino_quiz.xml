<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/lighter_green"
    tools:context=".FilipinoQuiz">

    <LinearLayout
        android:id="@+id/quizLaylout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timeVIew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:text="0:00"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/totalQuestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Total Questions"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/questionnaire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="questionnaire"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/AnsA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:background="@color/fontColor"
            android:text="Ans A"
            android:textColor="@color/black"
            tools:ignore="InvalidId" />

        <Button
            android:id="@+id/AnsB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/fontColor"
            android:text="Ans B"
            android:textColor="@color/black"
            tools:ignore="InvalidId" />

        <Button
            android:id="@+id/AnsC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/fontColor"
            android:text="Ans C"
            android:textColor="@color/black"
            tools:ignore="InvalidId" />

        <Button
            android:id="@+id/AnsD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/fontColor"
            android:text="Ans D"
            android:textColor="@color/black"
            tools:ignore="InvalidId" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginTop="15dp"
            android:background="#5EE863"
            android:text="Submit"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>