<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    tools:context=".Parent.ParentSettings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="backtoparentview"
                android:src="@drawable/ic_arrowback"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setting_text"
                android:fontFamily="@font/aloevera"
                android:textSize="22dp"
                android:textColor="@color/fontColor"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>

        <TextView
            android:id="@+id/editData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textAlignment="center"
            android:onClick="EditData"
            android:layout_gravity="right"
            android:layout_marginHorizontal="25dp"
            android:drawableTop="@drawable/ic_pencil"
            tools:ignore="RtlCompat" />

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            android:layout_gravity="center"
            android:layout_margin="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_user_circle"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textColor="@color/white"
            android:fontFamily="@font/aloevera"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/NameParent"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_input"
            android:drawableLeft="@drawable/ic_user_round"
            android:drawablePadding="10dp"
            android:hint="Parent Name"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/NameAddress"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_input"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="10dp"
            android:hint="Address"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/IDParent"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_input"
            android:drawableLeft="@drawable/ic_id"
            android:drawablePadding="10dp"
            android:hint="Parent ID"
            android:maxLength="11"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/PasswordParent"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_input"
            android:drawableLeft="@drawable/ic_keypass"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/choosefile"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_edittext"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"
                android:text="Choose Image"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_file"/>
        </LinearLayout>

        <Button
            android:id="@+id/UpdateInfoBtn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginVertical="15dp"
            android:text="Update"
            android:textColor="@color/fontColor"
            android:fontFamily="@font/aloevera"
            android:background="@drawable/custom_login_button"
            android:onClick="UpdateParentInfo"
            android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView>