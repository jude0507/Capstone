<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Parent.ParentRegistration">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREATE YOUR ACCOUNT"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"/>

    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/transparent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parent Information"
            android:layout_marginVertical="15dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ParentName"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_edittext"
                    android:drawableLeft="@drawable/custom_icon_name"
                    android:hint="Parent Name"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:inputType="textCapWords"
                    android:drawablePadding="10dp"
                    android:padding="10dp" />
                <EditText
                    android:id="@+id/ParentChildID"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_edittext"
                    android:drawableLeft="@drawable/custom_icon_user"
                    android:hint="Child ID"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:drawablePadding="10dp"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/ParentAddress"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_edittext"
                    android:drawableLeft="@drawable/custom_icon_address"
                    android:hint="Address"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:inputType="textCapWords"
                    android:drawablePadding="10dp"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/ParentPhone"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_edittext"
                    android:drawableLeft="@drawable/custom_icon_phone"
                    android:hint="Phone Number"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:drawablePadding="10dp"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/ParentID"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_edittext"
                    android:drawableLeft="@drawable/custom_icon_user"
                    android:hint="Parent User ID"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:inputType="text"
                    android:maxLength="15"
                    android:drawablePadding="10dp"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/ParentPass"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_edittext"
                    android:drawableLeft="@drawable/custom_icon_key"
                    android:hint="Password"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:drawablePadding="10dp"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:layout_marginBottom="15dp"/>
